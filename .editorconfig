root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.yml]
indent_size = 2

[.flake8]
indent_size = 2

[*.{py,yml}]
insert_final_newline = true

[Makefile]
indent_style = tab

[{Makefile,Dockerfile,.editorconfig,README.md}]
insert_final_newline = true
